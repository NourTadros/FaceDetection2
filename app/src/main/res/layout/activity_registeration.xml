<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterationActivity"
    android:background="@mipmap/seagrad">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="91dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@mipmap/user_icon"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="29dp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@mipmap/email_icon"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="78dp" />







                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@mipmap/password_icon"
                    tools:layout_editor_absoluteY="123dp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/SignupFnameFld"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginTop="10sp"
                    android:hint="First Name"
                    android:textSize="18sp"
                    android:nextFocusDown="@id/SignupLnameFld"
                    tools:layout_editor_absoluteX="118dp"
                    tools:layout_editor_absoluteY="21dp" />

                <EditText
                    android:id="@+id/SignupEmailFld"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="186dp"
                    tools:layout_editor_absoluteY="71dp" />

                <EditText
                    android:id="@+id/SignupPasswordFld"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="Password"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="111dp"
                    android:inputType="textPassword"/>












            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingBottom="10sp"
                >

                <EditText
                    android:id="@+id/SignupLnameFld"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginTop="10sp"
                    android:hint="Last Name"
                    android:textSize="18dp"
                    tools:layout_editor_absoluteX="269dp"
                    tools:layout_editor_absoluteY="21dp" />

                <net.rimoto.intlphoneinput.IntlPhoneInput
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    app:textSize="18sp"
                    app:textColor="#000000"
                    app:flagPaddingBottom="4dp"
                    app:flagPaddingEnd="4dp"
                    app:flagPaddingStart="4dp"
                    app:flagPaddingTop="4dp"
                    android:id="@+id/SignUpMobile" />

                <EditText
                    android:id="@+id/SignupConfirmPasswordFld"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="Confirm Password"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="214dp"
                    tools:layout_editor_absoluteY="111dp"
                    android:inputType="textPassword"/>






                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >





                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/SignupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:text="Sign Up" />


</RelativeLayout>